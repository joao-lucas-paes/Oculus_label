{
    "compilerOptions": {
      "target": "ES2020",
      "module": "CommonJS",
      "outDir": "dist",
      "strict": true,
      "noImplicitAny": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "sourceMap": true,
      "skipLibCheck": true,
      "types": ["jest"],
      "baseUrl": ".",
      "paths": {
        "@domain/*": ["src/domain/*"],
        "@arc/*": ["src/arc/*"],
        "@app/*": ["src/app/*"],
        "@ui/*": ["src/ui/*"],
        "@const/*": ["src/const/*"],
      }
    },
    "include": ["src/**/*", "index.ts"]
  }